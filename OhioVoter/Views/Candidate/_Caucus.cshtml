@model OhioVoter.ViewModels.Candidate.CandidateViewModel

<div class="panel panel-group panel-main panel-main-group">

    <div class="panel-title panel-main-title">
        <p> Caucus/Non-Legislative Committees </p>
    </div>

    <div class="panel-body panel-main-body">

        @{ if (Model.Candidate.CandidateLookUpId == Model.Candidate.CandidateId)
            {
                foreach (var line in @Model.Candidate.VoteSmartCandidateCongMembership)
                {
                    <p>@line</p>
                }
            }
            else if (Model.Candidate.CandidateLookUpId == Model.Candidate.RunningMateId)
            {
                foreach (var line in @Model.Candidate.VoteSmartRunningMateCongMembership)
                {
                    <p>@line</p>
                }
            }
        }

    </div>

</div>


