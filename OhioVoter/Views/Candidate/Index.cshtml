@model OhioVoter.ViewModels.Candidate.CandidateViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Candidate Page";
}

<div class="row">

    <div id="side-bar" class="col-sm-4">

        <div id="voter-location">
            @{Html.RenderAction("DisplayVoterLocationSideBar", "Location", Model.SideBarViewModel);}
        </div>

        <div id="voter-general-information">
            @{Html.RenderAction("DisplayGeneralLocationSideBar", "Location", Model.SideBarViewModel);}
        </div>

    </div>

    <div class="col-sm-8">

        <div class="panel-page-group">
            <h2><p class="panel-page-title"> Candidate Knowledge Center </p></h2>
        </div>


        <div id="candidate-display" class="candidate-Information">
            @{Html.RenderAction("DisplayCandidateInformation", "Candidate", Model);}
        </div>

    </div>

</div>
