@model OhioVoter.ViewModels.CandidatePageViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Candidate Page";
}

<div class="row">

    <div id="side-bar" class="col-sm-4">

        <div id="voter-location">
            @*{Html.RenderAction("DisplayVoterLocationSideBar", Model.SideBar.ControllerName, Model.SideBar);}*@
            @{Html.RenderAction("DisplayVoterLocationSideBar", "Location", Model.SideBar);}
        </div>

        <div id="voter-general-information">
            @*{Html.RenderAction("DisplayGeneralLocationSideBar", Model.SideBar.ControllerName, Model.SideBar);}*@
            @{Html.RenderAction("DisplayGeneralLocationSideBar", "Location", Model.SideBar);}
        </div>

    </div>

    <div class="col-sm-8">

        <div class="panel-page-group">
            <h2><p class="panel-page-title"> Candidate Lookup </p></h2>
        </div>

        <div class="panel panel-group panel-main panel-main-group">

            <div class="panel-title panel-main-title">
                <p>Candidate Lookup</p>
            </div>

            <div class="panel-body panel-main-body">

                @using (Html.BeginForm("Candidate", "Office", FormMethod.Post))
            {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.LabelFor(x => x.Offices, htmlAttributes: new { @class = "control-label" })<br />
                        @Html.EditorFor(x => x.Offices, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(x => x.Offices, "", new { @class = "text-danger" })
                    </div>

                    <button type="submit" class="btn btn-block panel-main-btn"> Search For Candidate </button>
                }


                @using (Html.BeginForm("Candidate", "Name", FormMethod.Post))
            {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.LabelFor(x => x.Candidates, htmlAttributes: new { @class = "control-label" })<br />
                        @Html.EditorFor(x => x.Candidates, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(x => x.Candidates, "", new { @class = "text-danger" })
                    </div>

                    <button type="submit" class="btn btn-block panel-main-btn"> Search For Candidate </button>
                }


                <div class="candidate-group">
                    <a href="#" class="btn btn-calendar panel-main-btn">
                        <img src="" />
                        Candidate's Name
                    </a><br />
                </div>

            </div>

        </div>

    </div>

</div>
