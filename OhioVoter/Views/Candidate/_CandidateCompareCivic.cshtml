@model OhioVoter.ViewModels.Candidate.CandidateCompareCivicViewModel

<div class="panel panel-group panel-main panel-main-group">

    <div class="panel-title panel-main-title">
        <p> Religious, Civic, and other Memberships </p>
    </div>

    <div id="candidate_compare_civic" class="panel-body panel-main-body">

        <div id="candidate_compare_civic_first_group" class="candidate_compare_first_group">
            @{Html.RenderPartial("_CandidateCompareCivicFirst", Model.CandidateCompareCivicFirstViewModel);}
        </div>
            
        <div id="candidate_compare_civic_second_group" class="candidate_compare_second_group">
            @{if (@Model.CandidateCompareCivicSecondViewModel.CandidateDisplayId != 0)
                {
                    Html.RenderPartial("_CandidateCompareCivicSecond", Model.CandidateCompareCivicSecondViewModel);
                }
            }
        </div>

    </div>

</div>
