@model OhioVoter.ViewModels.Candidate.CandidateSummaryViewModel

<div class="panel panel-group panel-main panel-main-group">

    <div class="panel-title panel-main-title">
        <p>Candidate Summary</p>
    </div>

    <div class="panel-body panel-main-body">

        <div id="candidate_summary">

            <div id="candidate_summary_candidate">
                <img src="@Url.Content(Model.CandidateSummary.VoteSmartPhotoUrl)" alt="Candidate" id="candidate_summary_img" /> <br />
                @Model.CandidateSummary.FullName<br />
                @Model.CandidateSummary.PartyName<br />
                @Model.CandidateSummary.OfficeName
                @Model.CandidateSummary.OfficeTerm<br />
                @Model.CandidateSummary.OfficeHolderName
            </div>

            <div id="candidate_summary_runningmate">
                @{ if (Model.RunningMateSummary.RunningMateId > 0)
                    {
                        <img src="@Url.Content(@Model.RunningMateSummary.VoteSmartPhotoUrl)" alt="Running Mate" id="candidate_summary_img" /> <br />
                        @Model.RunningMateSummary.FullName<br />
                        @Model.RunningMateSummary.PartyName<br />
                        @Model.RunningMateSummary.OfficeName<br />
                        @Model.RunningMateSummary.OfficeHolderName
                    }
                }
            </div>

        </div>

        <div id="candidate_summary_btn">
            @Html.ActionLink("Change Candidate", "Index", "Candidate", new { candidateId = 0 }, new { @id= "candidate_summary_new_btn", @class = "btn btn-block panel-main-btn" })
            @Html.ActionLink("Compare Second Candidate", "Compare", "Candidate", new { firstCandidateId = Model.SelectedCandidateId, secondCandidateId = 0, dateId = Model.SelectedCandidateVotingDateId, officeId = Model.SelectedCandidateOfficeId }, new { @id= "candidate_summary_compare_btn", @class = "btn btn-block panel-main-btn" })
        </div>

    </div>


</div>

