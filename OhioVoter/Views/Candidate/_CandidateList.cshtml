@model List<OhioVoter.ViewModels.Candidate.CandidateListViewModel>

<table>
    <tr>
        <th></th>
        <th>
            Candidate
        </th>
        <th>
            Party
        </th>
        <th>
            Office
        </th>
        <th></th>
    </tr>

    @for (int i = 0; i < Model.Count(); i++)
            {
                var candidate = Model[i];
        <tr>
            <td class="candidate_list_photo">
                @Html.HiddenFor(x => Model[i].CandidateId)
                <img src="@Url.Content(Model[i].VoteSmartPhotoUrl)" alt="Candidate Photo" class="candidate_list_img" />
            </td>
            <td class="candidate_list_candidate">
                @Html.DisplayFor(x => Model[i].CandidateName)
            </td>
            <td class="candidate_list_party">
                @Html.DisplayFor(x => Model[i].PartyName)
            </td>
            <td class="candidate_list_office">
                @Html.DisplayFor(x => Model[i].ElectionOfficeName)
            </td>
            <td class="candidate_list_select">
                @Html.ActionLink("Select", "Index", new { candidateId = candidate.CandidateId })
            </td>
        </tr>
    }


</table>
