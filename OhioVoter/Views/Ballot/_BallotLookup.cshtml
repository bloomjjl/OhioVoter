@model OhioVoter.ViewModels.Location.VoterLocationViewModel

<div id="ballot_Lookup_title" class="panel panel-group panel-main panel-main-group">

    <div class="panel-title panel-main-title">
        <p>Look Up Your Sample Ballot</p>
    </div>

    <div id="ballot_lookup_body" class="panel-body panel-main-body">

        @using (Html.BeginForm("Update", "Location", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <p> Enter an Ohio address to display your ballot. </p>

            <hr />

            @Html.ValidationSummary(false, Model.Message, new { @class = "text-danger ballot_location_form_msg" })

            <div id="ballot_location_form_address" class="form-group">
                @Html.LabelFor(x => x.StreetAddress, htmlAttributes: new { @class = "control-label" })<br />
                @Html.EditorFor(x => x.StreetAddress, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.StreetAddress, "", new { @class = "text-danger" })
            </div>

            <div id="ballot_location_form_zipcode" class="form-group">
                @Html.LabelFor(x => x.ZipCode, htmlAttributes: new { @class = "control-label" }) <br />
                @Html.EditorFor(x => x.ZipCode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.ZipCode, "", new { @class = "text-danger" })
            </div>

            @Html.HiddenFor(x => x.ControllerName)
            <button type="submit" class="btn btn-block panel-left-btn ballot_location_form_btn"> Update Your Location </button>

        }

    </div>
</div>

