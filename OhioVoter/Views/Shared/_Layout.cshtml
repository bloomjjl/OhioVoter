<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="header">
        <div class="container">
            <img class="logo-img" src="~/Content/images/logo_ohiovoter.png" alt="OhioVoter Logo" />
            <h1><p class="logo-title"> OhioVoter.org </p></h1>
        </div>
    </div>
    <div class="navbar navbar-inverse navbar-main">
        <div class="container">
            <div class="navbar-header navbar-logo">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img class="navbar-logo-img" src="~/Content/images/logo_ohiovoter.png" alt="OhioVoter Logo" />
                <h4><p class="navbar-logo-title"> OhioVoter.org </p></h4>
            </div>
            <div class="navbar-collapse collapse">
                <ul id="navbar-nav-link" class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Candidates", "Candidates", "Home")</li>
                    <li>@Html.ActionLink("Issues", "Issues", "Home")</li>
                    <li>@Html.ActionLink("Ballots", "Ballots", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

        <footer>
            <p>&copy; @DateTime.Now.Year - OhioVoter.org</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/site.js")
    @RenderSection("scripts", required: false)
</body>
</html>
